									<div class="input-group">
										<div class="input-group-text"><img src="{{ language.image }}" title="{{ language.name }}" /></div>
										<textarea name="module_ps_seo_pack_store_description[{{ language.language_id }}]" placeholder="{{ entry_store_description }}" id="input-store-owner-{{ language.language_id | default(config_meta_description) }}" id="input-store-description-{{ language.language_id }}" class="form-control" rows="5">{{ module_ps_seo_pack_store_description[language.language_id] }}</textarea>
									</div>
									<div id="error-input-store-description-{{ language.language_id }}" class="invalid-feedback"></div>
									{% endfor %}
								</div>
							</div>

							<div class="row mb-3 required">
								<label class="col-sm-2 col-form-label">{{ entry_store_language_code }}</label>
								<div class="col-sm-10">
