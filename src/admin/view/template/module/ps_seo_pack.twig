<div id="content">
	<div class="page-header">
		<div class="container-fluid">
			<div class="float-end">
				<div class="input-group">
					<div class="input-group-text">{{ entry_active_store }}</div>
					<select name="store" id="input-store" class="form-select">
						{% for store in stores %}
						<option value="{{ store.href }}" {% if store.store_id == store_id %} selected{% endif %}>{{ store.name }}</option>
						{% endfor %}
					</select>&nbsp;
					<button type="submit" form="form-module" data-bs-toggle="tooltip" title="{{ button_save }}" class="btn btn-primary"><i class="fa-solid fa-save"></i></button>&nbsp;
					<a href="{{ back }}" data-bs-toggle="tooltip" title="{{ button_back }}" class="btn btn-light"><i class="fa-solid fa-reply"></i></a>
				</div>
			</div>
			<h1>{{ heading_title }}</h1>
			<ol class="breadcrumb">
				{% for breadcrumb in breadcrumbs %}
				<li class="breadcrumb-item"><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
				{% endfor %}
			</ol>
		</div>
	</div>
	<div class="container-fluid">
		<div class="card">
			<div class="card-header"><i class="fa-solid fa-pencil"></i> {{ text_edit }}</div>
			<div class="card-body">
				<form id="form-module" action="{{ action }}" method="post" data-oc-toggle="ajax">

					<ul class="nav nav-tabs">
						<li class="nav-item"><a href="#tab-store" data-bs-toggle="tab" class="nav-link active">{{ tab_store }}</a></li>
						<li class="nav-item"><a href="#tab-structured-data-markup" data-bs-toggle="tab" class="nav-link">{{ tab_structured_data_markup }}</a></li>
						<li class="nav-item"><a href="#tab-dublin-core" data-bs-toggle="tab" class="nav-link">{{ tab_dublin_core }}</a></li>
						<li class="nav-item"><a href="#tab-open-graph" data-bs-toggle="tab" class="nav-link">{{ tab_open_graph }}</a></li>
						<li class="nav-item"><a href="#tab-twitter" data-bs-toggle="tab" class="nav-link">{{ tab_twitter }}</a></li>
						<li class="nav-item"><a href="#tab-support" data-bs-toggle="tab" class="nav-link">{{ tab_help_and_support }}</a></li>
					</ul>

					<div class="tab-content">
						<div id="tab-store" class="tab-pane active">

							<div class="row mb-3">
								<label class="col-sm-2 col-form-label" for="input-enable-extension">{{ entry_enable_extension }}</label>
								<div class="col-sm-10">
									<div class="form-check form-switch form-switch-lg">
										<input type="hidden" name="module_ps_seo_pack_status" value="0" />
										<input type="checkbox" name="module_ps_seo_pack_status" value="1" class="form-check-input" {% if module_ps_seo_pack_status %} checked{% endif %} id="input-enable-extension" />
									</div>
								</div>
							</div>

							<hr />

							<div class="row mb-3 required">
								<label class="col-sm-2 col-form-label">{{ entry_store_name }}</label>
								<div class="col-sm-10">
									{% for language in languages %}
									<div class="input-group">
										<div class="input-group-text"><img src="{{ language.image }}" title="{{ language.name }}" /></div>
										<input type="text" name="module_ps_seo_pack_store_name[{{ language.language_id }}]" value="{{ module_ps_seo_pack_store_name[language.language_id] | default(config_name) }}" placeholder="{{ entry_store_name }}" id="input-store-name-{{ language.language_id }}" class="form-control" />
									</div>
									<div id="error-input-store-name-{{ language.language_id }}" class="invalid-feedback"></div>
									{% endfor %}
								</div>
							</div>

							<div class="row mb-3 required">
								<label class="col-sm-2 col-form-label">{{ entry_store_owner }}</label>
